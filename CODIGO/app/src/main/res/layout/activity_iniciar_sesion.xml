<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".IniciarSesionActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="316dp"
        android:layout_height="196dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Iniciar Sesión"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toTopOf="@id/emailEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="269dp"
        android:layout_height="54dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#B6BBC3"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#E1D6D6"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#B6BBC3"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="#E1D6D6"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnIngresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_marginBottom="4dp"
        android:onClick="iniciarSesion"
        android:text="Iniciar Sesion"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/noTengoUnaCuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/noTengoUnaCuenta"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:text="¿todavía no tenés cuenta?"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toTopOf="@id/btnIrARegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent" />

	<Button
        android:id="@+id/btnIrARegistrar"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:onClick="registrarse"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Crear cuenta"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noTengoUnaCuenta" />

</androidx.constraintlayout.widget.ConstraintLayout>
